<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE9E7"
    tools:context=".ActivityCamera">


    <Button
        android:id="@+id/button_home"
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:background="@drawable/button_corners"
        android:text="@string/home"
        android:textColor="#bec7d6"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sceneDescription"
        app:layout_constraintVertical_bias="0.807" />

    <org.opencv.android.JavaCameraView
        android:id="@+id/camera_preview"
        android:layout_width="410dp"
        android:layout_height="570dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sceneDescription"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/description_textview"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#3A3A3A"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_preview" />

</androidx.constraintlayout.widget.ConstraintLayout>